        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/inputPhoneNumber"
        android:hint="Number Telefonu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/inputEmailAddress"
        android:hint="Adres Email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
